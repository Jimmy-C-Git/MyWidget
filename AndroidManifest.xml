<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cj.mywidget"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
	<uses-permission android:name="android.permission.GET_TASKS" />
    
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:name="com.cj.mywidget.MyApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cj.mywidget.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cj.mywidget.PullDownEditTextActivity"
            android:label="@string/title_activity_pull_down_edit_text" >
        </activity>
        <activity
            android:name="com.cj.mywidget.SmartListActivity"
            android:label="@string/title_activity_smart_list" >
        </activity>

        <service android:name="com.cj.mywidget.MyService" >
        </service>

        <activity
            android:name="com.cj.camera.CameraActivity"
            android:label="@string/title_activity_camera"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.cj.mywidget.RunningTaskActivity"
            android:label="@string/title_activity_running_task" >
        </activity>
    </application>

</manifest>
